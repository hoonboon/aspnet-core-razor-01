@page "{id:int}"
@model AspNetCoreWebRazor01.Pages.Movies.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Rating)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Status)
        </dd>
    </dl>
</div>

@if (Model.Movie.Status != MovieStatus.Approved)
{
    @if ((await AuthorizationService.AuthorizeAsync(
        User, Model.Movie, AppOperations.Approve)).Succeeded)
    {
        <form style="display:inline;" method="post">
            <input type="hidden" name="id" value="@Model.Movie.ID" />
            <input type="hidden" name="status" value="@MovieStatus.Approved" />
            <button type="submit" class="btn btn-xs btn-success">Approve</button>
        </form>
    }
}

@if (Model.Movie.Status != MovieStatus.Rejected)
{
    @if ((await AuthorizationService.AuthorizeAsync(
        User, Model.Movie, AppOperations.Reject)).Succeeded)
    {
        <form style="display:inline;" method="post">
            <input type="hidden" name="id" value="@Model.Movie.ID" />
            <input type="hidden" name="status" value="@MovieStatus.Rejected" />
            <button type="submit" class="btn btn-xs btn-danger">Reject</button>
        </form>
    }
}

<div>
    @if ((await AuthorizationService.AuthorizeAsync(
        User, Model.Movie,
        AppOperations.Update)).Succeeded)
    {
        <a asp-page="./Edit" asp-route-id="@Model.Movie.ID">Edit</a>
        <text> | </text>
    }
    <a asp-page="./Index">Back to List</a>
</div>
